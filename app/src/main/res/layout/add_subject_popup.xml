<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="500dp"
    android:layout_gravity="center"
    android:padding="20dp"
    android:background="@drawable/bg_banner">

    <ImageView
        android:id="@+id/subject_add_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="3dp"
        android:background="@drawable/bg_close"
        android:src="@drawable/ic_baseline_close_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/popup_title_add_subject"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/rs_light"
        android:text="Add Subject"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/rs_light"
        android:text="Name :"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/popup_title_add_subject"></TextView>

    <EditText
        android:id="@+id/subject_add_name"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft = "35dp"
        android:maxLines="1"
        android:padding="10dp"
        android:textSize="10sp"
        android:background="@drawable/bg_input"
        android:inputType="textPersonName"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/popup_title_add_subject"></EditText>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/rs_light"
        android:text="Attended Classes :"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"></TextView>

    <EditText
        android:id="@+id/local_attended_classes"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="15dp"
        android:maxLines="1"
        android:padding="10dp"
        android:textSize="10sp"
        android:background="@drawable/bg_input"
        android:inputType="number"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/subject_add_name"></EditText>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/rs_light"
        android:text="Total Classes :"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"></TextView>

    <EditText
        android:id="@+id/local_total_classes"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/bg_input"
        android:inputType="number"
        android:maxLines="1"
        android:textSize="10sp"
        android:padding="10dp"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/local_attended_classes"></EditText>

    <Button
        android:id="@+id/subject_add_commit"
        android:background="@drawable/bg_button"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rs_light"
        android:text="Add"
        android:textAllCaps="false"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>